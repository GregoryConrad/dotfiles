#!/bin/sh

system_type=$(uname -s)

if [ "$system_type" = "Darwin" ]; then
  echo "Some commands you may want to copy-paste to get set up quickly:"
  echo brew install helix warp
  echo brew install colima docker
  echo brew install gh git-lfs
  echo brew install ollama dustinblackman/tap/oatmeal
  echo brew install --casks unnaturalscrollwheels
  echo brew install --casks flutter google-chrome ultimaker-cura vlc zoom 
fi

yes "" | ssh-keygen -N "" -t ed25519 -C "gregorysconrad@gmail.com"
echo "Now go add the newly created SSH key to GitHub!"
